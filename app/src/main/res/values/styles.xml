<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="MenuAppearanceInactive">
        <item name="itemIconTint">@color/colorPrimaryDark</item>
        <item name="itemTextColor">@color/colorPrimaryDark</item>
    </style>

    <style name="MenuAppearanceActive">
        <item name="itemIconTint">@color/colorAccent</item>
        <item name="itemTextColor">@color/colorAccent</item>
    </style>

    <color name="colorPrimaryDark">#2196F3</color>
</resources>
