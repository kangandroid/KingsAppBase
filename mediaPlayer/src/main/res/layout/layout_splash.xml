<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="100pt"
        android:background="@color/colorPrimary" />

    <TextView
        android:id="@+id/tv_skip"
        android:layout_width="50pt"
        android:layout_height="30pt"
        android:layout_gravity="end|top"
        android:layout_marginTop="38pt"
        android:layout_marginEnd="24pt"
        android:background="@drawable/bg_border_btn"
        android:gravity="center"
        android:text="@string/skip"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="100pt"
        android:layout_gravity="bottom"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="50pt"
            android:layout_height="50pt"
            android:layout_margin="10pt"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_logo_background"
            android:src="@drawable/ic_logo_foreground" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_desc"
            android:textColor="@color/textBlack"
            android:textSize="18sp" />


    </LinearLayout>
</FrameLayout>