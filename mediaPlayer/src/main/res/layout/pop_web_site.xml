<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="750pt"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/website_list"
            android:maxHeight="300pt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:background="@color/textBlack"
            android:layout_width="match_parent"
            android:layout_height="1pt" />
        <androidx.cardview.widget.CardView
            app:cardBackgroundColor="@color/white"
            android:layout_marginBottom="10pt"
            app:cardElevation="10pt"
            android:clipChildren="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80pt"
                android:gravity="start"
                android:id="@+id/ll_add_website"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40pt"
                    android:layout_height="40pt"
                    android:layout_marginStart="40pt"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_add_circle" />

                <TextView
                    android:layout_width="0pt"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="18pt"
                    android:layout_weight="1"
                    android:text="@string/addWebSite"
                    android:textColor="@color/textLink"
                    android:textSize="32pt" />

                <ImageView
                    android:id="@+id/ib_expend_dismiss"
                    android:padding="20pt"
                    android:layout_width="80pt"
                    android:layout_height="80pt"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_expand_less" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</FrameLayout>
