<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60pt"
        android:layout_marginStart="80pt"
        android:layout_marginEnd="120pt"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/ib_spread"
            android:src="@drawable/ic_spread"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20pt"
            android:visibility="gone" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60pt"
            android:background="@drawable/bg_title_search"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/web_title"
                android:layout_width="wrap_content"
                android:layout_height="60pt"
                android:layout_marginStart="40pt"
                android:gravity="center"
                android:text="@string/baidu"
                android:textColor="@color/textBlack"
                app:drawableEndCompat="@drawable/ic_expand_more" />

            <View
                android:id="@+id/divider"
                android:layout_width="1pt"
                android:layout_height="60pt"
                android:background="@color/gray_2" />

            <EditText
                android:id="@+id/et_url"
                android:layout_width="0pt"
                android:layout_height="60pt"
                android:layout_marginStart="30pt"
                android:layout_weight="1"
                android:autofillHints="auto"
                android:background="@null"
                android:inputType="textUri"
                android:maxLines="1"
                android:textColor="@color/textBlack" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
